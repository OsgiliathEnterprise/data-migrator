<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!--
        Added the entity Employee.
    -->
    <changeSet id="20231125144522-1" author="jhipster">
        <createTable tableName="employee" remarks="The Employee entity.">
            <column name="first_name" type="varchar(255)" remarks="The firstname attribute.">
                <constraints nullable="true"/>
            </column>
            <column name="last_name" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="hire_date" type="${datetimeType}">
                <constraints nullable="false"/>
            </column>
            <column name="salary" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="commission_pct" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="manager_email" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="manager_hire_date" type="${datetimeType}">
                <constraints nullable="true"/>
            </column>
            <column name="department_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="job_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="employee" columnName="hire_date" columnDataType="${datetimeType}"/>
        <createIndex indexName="index_employee_manager_pk" tableName="employee">
            <column name="manager_email"/>
            <column name="manager_hire_date"/>
        </createIndex>
        <!--<createIndex indexName="index_employee_pk" tableName="employee" unique="true">
            <column name="hire_date"/>
            <column name="email"/>
        </createIndex>-->
        <addPrimaryKey tableName="employee" columnNames="email,hire_date"
                       constraintName="employee_primary_key_constraint"/>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->

    <!--
        Load sample data generated with Faker.js
        - This data can be easily edited using a CSV editor (or even MS Excel) and
          is located in the 'src/main/resources/config/liquibase/fake-data' directory
        - By default this data is applied when running with the JHipster 'dev' profile.
          This can be customized by adding or removing 'faker' in the 'spring.liquibase.contexts'
          Spring Boot configuration key.
    -->
    <changeSet id="20231125144522-1-data" author="jhipster" context="faker">
        <loadData
                file="config/liquibase/fake-data/employee.csv"
                separator=";"
                tableName="employee"
                usePreparedStatements="true">
            <column name="first_name" type="string"/>
            <column name="last_name" type="string"/>
            <column name="email" type="string"/>
            <column name="phone_number" type="string"/>
            <column name="hire_date" type="date"/>
            <column name="salary" type="numeric"/>
            <column name="commission_pct" type="numeric"/>
            <column name="manager_email" type="string"/>
            <column name="manager_hire_date" type="date"/>
            <column name="department_id" type="numeric"/>
            <!-- jhipster-needle-liquibase-add-loadcolumn - JHipster (and/or extensions) can add load columns here -->
        </loadData>
    </changeSet>
</databaseChangeLog>
